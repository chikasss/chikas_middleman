<div class="row my-5 justify-content-center">
  <div class="col-12 col-lg-10 col-xl-8">
    <div class="container">
      <div id="projects">
        <h2 class="text-center mb-3"> My Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
            <div class="card-product">

                  <h5 class="text-center mt-3 mb-3"><%= project.name %></h5>


              <% if project.media_type == 'video' %>
                <video height="600", width="100%" controls>
                  <source src="<%= project.media %>" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              <% else %>
              <%= image_tag project.image, alt: "project image" %>
              <% end %>

              <div class="card-product-infos mb-3">
              <h2>What</h2>
              <p><%= project.description %></p>
              <h2>My implementation</h2>
              <ul>
                <% project.role.each do |responsibility| %>
                  <li><%= responsibility %></li>
                <% end %>
              </ul>
              <%# <p><%= project.role %></p>
              <h2>Skills</h2>
              <p><%= project.skill %></p>



                <div class="d-flex justify-content-between align-items-center">
                  <div class="card-links">
                    <% link_to project.github, class: 'external-link', target: '_blank' do %>
                      <i class="fa-brands fa-github"></i>
                    <% end %>
                    <% if project.online?  %>
                      <% link_to project.url, class: 'external-link', target: '_blank' do %>
                        <i class="fas fa-external-link-alt"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
